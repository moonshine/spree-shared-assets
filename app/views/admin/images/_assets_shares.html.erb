<tr>
  <td>
    <%= check_box_tag "shareable_id", @product.id,
      @image.products.include?(@product) %>
    &nbsp;Product
  </td>
</tr>
<% for variant in @product.variants %>
  <tr>
    <td>
      <%= check_box_tag "image[variant_ids][]",
        variant.id,
        @image.variants.include?(variant) %>
      &nbsp;<%= "#{variant.sku} #{variant.options_text}" %>
    </td>
  </tr>
<% end %>
<%= hidden_field_tag "image[variant_ids][]", "" %>
<%= hidden_field_tag :shareable_id, "" %>

